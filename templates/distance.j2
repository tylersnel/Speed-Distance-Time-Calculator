<!-- Our CSS -->
<link href="{{url_for('static', filename='app.css')}}" rel="stylesheet">

<html>
<head>
    <title>Distance</title>
</head>
<body>
        {%  if distance_img %}
        <img src={{distance_img}}>
        {% endif %}
    <h1>Calculate the distance you traveled</h1>
    <div class="topnav"><a href="/">Login Page</a> - <a href="/distance">Calculate Distance</a> - <a href="/speed">Calculate Speed</a> - <a href="/time">Calculate Time</a></div>



    <form id= "getSpeed" action="/distance" method="POST">
    <label for="speed"> Enter Speed: </label>
    <input type=number id="speed" name="speed" min="1" placeholder="Enter Number" required>

    
    <select name = "unit" id="unit" required>
        <option selected disabled value=''>-Select Unit of Measure-</option>
        <option value="km">kph</option>
        <option value="mi">mph</option>
    </select>
        
    <label for="time"> Enter Time: </label>
    <input type=text id="time" name="time" placeholder="HH:MM:SS" pattern= "[0-9]{1}[0-9]{1}:[0-9]{1}[0-9]{1}:[0-9]{1}[0-9]{1}" required>
    
    <input type="submit" value="Submit" name="userInput">
    <a href='/distance'><input class="btn" type="button" value="Clear Inputs"></a>
    </form>



    {% if data %}
        <h2> Your distance traveled is: {{data}} {{measure}} </h2>
  
    {% endif %}
    
    <div>
    <h3>What is new</h3>
    <p>New Feature!</p>
    <p>New Feature!</p>
    <p>Click <a href="/advanced">Here</a> For Advanced Details (right now just takes you home)</p>

    </div>

<a class="back" title="Previous Page" href="/">&#11160;</a>  <a class="forward" title="Next Page" href="/speed">&#11162;</a>


</body>
</html>
