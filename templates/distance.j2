    <form id= "getSpeed" action="/distance" method="POST">
    <label for="speed"> Enter Speed: </label>
    <input type=number id="speed" name="speed" required>
    
    <label for="time"> Enter Time: </label>
    <input type=text id="time" name="time" placeholder="hh:mm:ss" pattern= "[0-9]{1}[0-9]{1}:[0-9]{1}[0-9]{1}:[0-9]{1}[0-9]{1}" required>
    
    <input type="submit" value="Submit" name="userInput">
    <a href='/distance'><input class="btn" type="button" value="Cancel"></a>
    </form>

