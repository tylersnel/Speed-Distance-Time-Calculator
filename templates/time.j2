<link href="{{url_for('static', filename='app.css')}}" rel="stylesheet">

<html>
<head>
    <title>Time</title>
</head>
<body>
    <h1>Speed -  Time - Distance</h1>
    <p>Calculate the distance you traveled</p>
    <div class="topnav"><a href="/">Login Page</a> - <a href="/distance">Calculate Distance</a> - <a href="/speed">Calculate Speed</a> - <a href="/time">Calculate Time</a></div>

    <form id= "getDistance" action="/time" method="POST">
    <label for="distance"> Enter Distance: </label>
    <input type=number id="distance" name="distance" min="1" placeholder="Enter Number" required>

    

        
    <form id= "getSpeed" action="/time" method="POST">
    <label for="speed"> Enter Speed: </label>
    <input type=number id="speed" name="speed" min="1" placeholder="Enter Number" required>

    
    <select name = "unit" id="unit" required>
        <option selected disabled value=''>-Select Unit of Measure-</option>
        <option value="Kilometers">Kilometers</option>
        <option value="Miles">Miles</option>
    </select>

     <input type="submit" value="Submit" name="userInput">
    <a href='/time'><input class="btn" type="button" value="Clear Inputs"></a>
    </form>

    {% if data %}
        <h2> Your time traveled is: {{data}} {{measure}}</h2>
    {% endif %}
    
